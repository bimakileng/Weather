<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                tools:background="@drawable/bg_gradient"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:minHeight="48dp">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/TimeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        tools:text="12 PM"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:layout_toEndOf="@+id/TimeLabel"
        android:src="@drawable/partly_cloudy"
        android:layout_alignBaseline="@+id/summaryLabel"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/TimeLabel"
        android:layout_toLeftOf="@+id/summaryLabel"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryLabel"
        android:textColor="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:text="Partly cloudy"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" \u2103"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:layout_alignTop="@+id/iconImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:paddingRight="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/temperatureLabel"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2"
        android:textColor="@color/abc_primary_text_disable_only_material_dark"
        android:textSize="15sp"
        android:layout_centerInParent="true"/>

</RelativeLayout>