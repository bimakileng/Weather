<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                tools:background="@drawable/bg_gradient">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iconImageView"
        android:paddingLeft="4dp"
        android:src="@drawable/clear_day"
        android:layout_alignParentStart="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/degreesLabel"
        android:layout_alignParentLeft="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayNameLabel"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        tools:text="Wednesday"
        android:paddingLeft="2dp"
        android:paddingRight="4dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temperatureLabel"
        android:gravity="center"
        android:textColor="#000000"
        tools:text="100"
        android:textSize="12sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/dayNameLabel"
        android:paddingLeft="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" \u2103"
        android:id="@+id/degreesLabel"
        android:textColor="#000000"
        android:textSize="12sp"
        android:foregroundGravity="top"
        android:layout_alignParentEnd="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/temperatureLabel"
        android:layout_alignParentRight="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/summaryLabeld"
        tools:text="Partly cloudy"
        android:textSize="12sp"
        android:textColor="#686464"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iconImageView"
        android:layout_alignParentRight="true"
        android:paddingLeft="4dp"/>
</RelativeLayout>